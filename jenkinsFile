pipeline {


    agent any
    triggers {
            pollSCM 'H/10 * * * *'
        }
    stages {
        stage('git repo & clean') {
            steps {
                sleep 10
                echo 'hello 1'
            }
        }
        stage('install') {
            steps {
              sleep 10
              echo 'hello 2'
            }
        }
        stage('test') {
            steps {
                sleep 10
                echo 'hello 3'
            }
        }
        stage('package') {
            steps {
              sleep 10
              echo 'hello 4'
            }
        }
    }
}
